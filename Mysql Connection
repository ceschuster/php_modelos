//ini_set('default_charset','UTF-8');

$hostname_conexao1 = "localhost";
$database_conexao1 = "sa_consultoria";
$username_conexao1 = "root";
$password_conexao1 = "";

$conexao1 = mysqli_connect($hostname_conexao1, $username_conexao1, $password_conexao1);
if (!$conexao1)
  {
  die("Connection error: " . mysqli_connect_error());
  }
  
mysqli_query($conexao1, "SET NAMES 'utf8'");
mysqli_query($conexao1, 'SET character_set_connection=utf8');
mysqli_query($conexao1, 'SET character_set_client=utf8');
mysqli_query($conexao1, 'SET character_set_results=utf8');
